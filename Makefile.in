	else \
		(cd engine && $(MAKE) DOSTRIP=$(DOSTRIP) $@ ) && \
		$(CP) engine/$@ $@ && \
		($(MASSAGE_EXE) $@ || true); \
		@GFORTHFAST_EXE@; \
		@NO_CHECK@ $(MAKE) checkone ENGINE=./engine/$@; \
	fi
	$(DOSTRIP) $@

